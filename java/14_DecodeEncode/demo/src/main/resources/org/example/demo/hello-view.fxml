<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane>
        <Label text="Alphabet: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button text="Standard" prefWidth="100" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

        <Label text="Key: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="Recalc" prefWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    </GridPane>

    <Label text="Plain text: "/>
    <TextArea prefWidth="400" />

    <Label text="Encrypted Text: "/>
    <TextArea prefWidth="400" />
</VBox>
